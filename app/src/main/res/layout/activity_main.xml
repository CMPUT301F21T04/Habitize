<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/followReq"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="288dp"
        android:layout_height="129dp"
        android:layout_marginBottom="24dp"
        android:text="FOLLOW REQUESTS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/todaysHabits"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="288dp"
        android:layout_height="129dp"
        android:layout_marginBottom="12dp"
        android:text="TODAY'S HABITS"
        app:layout_constraintBottom_toTopOf="@+id/allHabits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/allHabits"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="288dp"
        android:layout_height="129dp"
        android:layout_marginBottom="12dp"
        android:text="ALL HABITS"
        app:layout_constraintBottom_toTopOf="@+id/followReq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addHabit"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="288dp"
        android:layout_height="129dp"
        android:layout_marginBottom="12dp"
        android:text="ADD HABIT"
        app:layout_constraintBottom_toTopOf="@+id/todaysHabits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="287dp"
        android:layout_height="107dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toTopOf="@+id/addHabit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>